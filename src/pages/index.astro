---
import { Image } from "astro:assets";
import chuckImage from "../assets/chuck-norris.png";
import "../styles/index.css";
---

<div id="overlay"></div>
<main>
  <div class="main-container">
    <button id="reset-button" class="reset-button">X</button>
    <div class="chuck-container">
      <Image
        class="chuck-face"
        id="chuck-face"
        src={chuckImage}
        alt="pic of the man himself"
      />
      <div id="speech-bubble" class="speech-bubble">
        <div id="chuck-wisdom"></div>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 14 14">
          <polygon points="0,14 7,0 14,14" fill="black"></polygon>
          <polygon points="1,14 7,2 13,14" fill="white"></polygon>
        </svg>
      </div>
    </div>
    <h1 id="main-header" class="main-header">
      Click the button for a Chuck fact!
    </h1>
    <button id="main-button" class="main-button">This is the button</button>
  </div>
</main>
<script is:inline defer type="text/javascript" src="index.js"></script>
